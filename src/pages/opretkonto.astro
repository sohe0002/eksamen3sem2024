---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import LysBorderButton from "../components/LysBorderButton.astro";
---

<MainLayout title="Abonnement">
  <section class="px-md md:px-xl pb-md">
    <h1 class="font-khand text-h2_mobil md:text-h2_desk text-grå-900">
      DIN KONTO
    </h1>
    <hr class="w-full border-grå-900 border" />

    <div class="md:grid md:grid-cols-2 pt-s pb-lg gap-12">
      <section class="bg-grå-800 px-s md:px-xl pt-xl mb-s md:mb-0 pb-lg">
        <p
          class="font-montserrat text-brun-50 text-p_stormobil md:text-p_stordesk text-center pb-md"
        >
          Har du allerede en konto hos os, så log ind
        </p>

        <a class="grid justify-items-center" href="/logind"
          ><LysBorderButton>LOG IND</LysBorderButton></a
        >
      </section>

      <section>
        <h2 class="font-khand text-h3_mobil md:text-h3_desk md:pb-s">
          OPRET KONTO
        </h2>

        <div class="">
          <form class="w-full space-y-4">
            <!-- Email input -->
            <div>
              <label for="email" class="block"></label>
              <input
                type="email"
                id="email"
                class="w-full p-4 bg-grå-400 text-p_mobil md:text-p_lilledesk text-gray-900 font-montserrat outline-none border-none focus:outline-none focus:border-none focus:ring-0"
                placeholder="E-mail"
              />
            </div>

            <!-- Password input -->
            <div>
              <label for="password" class="block"></label>
              <input
                type="password"
                id="password"
                class="w-full p-4 bg-grå-400 text-p_mobil md:text-p_lilledesk font-montserrat text-gray-900 outline-none border-none focus:outline-none focus:border-none focus:ring-0"
                placeholder="Password"
              />
            </div>

            <!-- Gentag password input -->
            <div>
              <label for="password-confirm" class="block"></label>
              <input
                type="password"
                id="password-confirm"
                class="w-full p-4 bg-grå-400 text-p_mobil md:text-p_lilledesk font-montserrat text-gray-900 outline-none border-none focus:outline-none focus:border-none focus:ring-0"
                placeholder="Bekræft password"
              />
            </div>
          </form>
          <a class="grid justify-items-center pb-lg pt-s" href="/opretkonto"
            ><Button>OPRET KONTO</Button></a
          >
        </div>
      </section>
    </div>
  </section>
</MainLayout>
