---
import MainLayout from "../layouts/MainLayout.astro";
import BorderButton from "../components/BorderButton.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Abonnement">
  <section class="px-xl">
    <h1 class="text-h2_mobil md:text-h2_desk h1_grå">ABONNEMENT</h1>
    <hr class="w-full border-grå-900 border" />
    <div class="breadcrumb flex justify-between text-p_lilledesk p_grå pb-lg">
      <a href="/abonnement1" class="hidden md:block hover:underline"
        >1. Vælg Kaffe</a
      >
      <a href="/abonnement2" class="hidden md:block hover:underline"
        >2. Vælg Abonnement</a
      >
      <a href="/abonnement3" class="hidden md:block hover:underline"
        >3. Vælg Frekvensen</a
      >
      <a href="/abonnement4" class="font-bold hover:underline"
        >4. Føj til Kurven</a
      >
    </div>
  </section>

  <section class="px-xl md:pb-lg">
    <div class="md:grid md:grid-cols-2 gap-8">
      <div>
        <div class="pb-xs md:pb-s">
          <p class="text-h4_mobil md:text-h4_desk font-bold h4_grå">KAFFE</p>
          <p class="text-h4_mobil md:text-h4_desk h4_grå">FILTERKAFFE</p>
        </div>
        <div class="pb-xs md:pb-s">
          <p class="text-h4_mobil md:text-h4_desk font-bold h4_grå">
            ABONNEMENT
          </p>
          <p class="text-h4_mobil md:text-h4_desk h4_grå">VI OVERRASKER DIG!</p>
        </div>
        <div class="pb-xs md:pb-s">
          <p class="text-h4_mobil md:text-h4_desk font-bold h4_grå">FREKVENS</p>
          <p class="text-h4_mobil md:text-h4_desk h4_grå">HVER 4. UGE</p>
        </div>
      </div>
      <div>
        <p class="text-h4_mobil md:text-h4_desk font-bold h4_grå">
          HVOR SKAL VI SENDE KAFFEN TIL?
        </p>
        <div class="flex justify-start gap-4 pt-xs md:pb-s">
          <!-- DANMARK -->
          <label class="cursor-pointer">
            <input
              type="radio"
              name="region"
              value="danmark"
              class="peer hidden"
            />
            <div
              class="border border-grå-900 hover:border-2 h4_grå text-h4_mobil md:text-h4_desk px-xs py-xxs peer-checked:bg-grøn-500 peer-checked:text-white peer-checked:border-grøn-500"
            >
              DANMARK
            </div>
          </label>

          <!-- RESTEN AF VERDEN -->
          <label class="cursor-pointer">
            <input
              type="radio"
              name="region"
              value="resten-af-verden"
              class="peer hidden"
            />
            <div
              class="border border-grå-900 hover:border-2 h4_grå text-h4_mobil md:text-h4_desk px-xs py-xxs peer-checked:bg-grøn-500 peer-checked:text-white peer-checked:border-grøn-500"
            >
              RESTEN AF VERDEN
            </div>
          </label>
        </div>

        <p class="text-h4_mobil md:text-h4_desk font-bold h4_grå pt-xs md:pt-0">
          DIN KONTO HOS COFFEE COLLECTIVE
        </p>
        <div class="flex justify-start gap-4 pt-xs pb-s">
          <a class="grid justify-items-center" href="/logind"
            ><BorderButton>LOG IND</BorderButton></a
          >
          <a class="grid justify-items-center" href="/opretkonto"
            ><BorderButton>OPRET KONTO</BorderButton></a
          >
        </div>
      </div>
    </div>
  </section>

  <a class="grid justify-items-center pb-lg pt-s" href="/takforbestilling"
    ><Button>FØJ TIL KURVEN</Button></a
  >
</MainLayout>
